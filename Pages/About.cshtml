@page
@model PapaLuiPizzaria.Pages.AboutModel

@{
    ViewData["Title"] = "Customer Body Statistics";
}

<h2>Customer Body Statistics</h2>

<table>
    <tr>
        <th>
            Order Date
        </th>
        <th>
            Customers
        </th>
    </tr>

    @foreach (var item in Model.Customers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @item.CustomerCount
            </td>
        </tr>
    }
</table>