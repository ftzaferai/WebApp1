@page "{id:int}"
@model PapaLuiPizzaria.Pages.Stores.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ConcurrencyErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Store</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.Budget)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.ConcurrencyToken)
        </dt>
        <dd class="col-sm-10">
            Utility.GetLastChars(Model.Store.ConcurrencyToken)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Administrator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.Administrator.FullName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Store.StoreID" />
        <input type="hidden" asp-for="Store.ConcurrencyToken" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
