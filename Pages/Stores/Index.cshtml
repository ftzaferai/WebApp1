@page
@model PapaLuiPizzaria.Pages.Stores.IndexModel

@{
    ViewData["Title"] = "Stores";
}

<h2>Stores</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].Budget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].ConcurrencyToken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].Administrator)
            </th>
            <th>
                Token
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Store) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                Utility.GetLastChars(item.ConcurrencyToken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Administrator.FullName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StoreID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StoreID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.StoreID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
