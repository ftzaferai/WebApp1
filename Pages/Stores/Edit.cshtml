@page "{id:int}"
@model PapaLuiPizzaria.Pages.Stores.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Store</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Store.StoreID" />
            <input type="hidden" asp-for="Store.ConcurrencyToken" />
            <div class="form-group">
                <label>Version</label>
                Utility.GetLastChars(Model.Store.ConcurrencyToken)
            </div>
            <div class="form-group">
                <label asp-for="Store.Name" class="control-label"></label>
                <input asp-for="Store.Name" class="form-control" />
                <span asp-validation-for="Store.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Store.Budget" class="control-label"></label>
                <input asp-for="Store.Budget" class="form-control" />
                <span asp-validation-for="Store.Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Store.StartDate" class="control-label"></label>
                <input asp-for="Store.StartDate" class="form-control" />
                <span asp-validation-for="Store.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Store.DeliveryID" class="control-label"></label>
                <select asp-for="Store.DeliveryID" class="form-control" asp-items="ViewBag.DeliveryID"></select>
                <span asp-validation-for="Store.DeliveryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Delivery</label>
                <select asp-for="Store.DeliveryID" class="form-control"
                 asp-items="@Model.DeliveryNameSL"></select>
                <span asp-validation-for="Store.DeliveryID" class="text-danger">
                </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
