@page
@model PapaLuiPizzaria.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductID" />
            <div class="form-group">
                <label asp-for="Product.ProductID" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.Product.ProductID)</div>
            </div>          
            <div class="form-group">
                <label asp-for="Product.Title" class="control-label"></label>
                <input asp-for="Product.Title" class="form-control" />
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Credits" class="control-label"></label>
                <input asp-for="Product.Credits" class="form-control" />
                <span asp-validation-for="Product.Credits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Store" class="control-label"></label>
                <select asp-for="Product.StoreID" class="form-control" 
                    asp-items="@Model.StoreNameSL"></select>
                <span asp-validation-for="Product.StoreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
